    link(rel='icon' type='image/png' sizes='32x32' href='/assets/icons/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='96x96' href='/assets/icons/favicon-96x96.png')
    link(rel='icon' type='image/png' sizes='16x16' href='/assets/icons/favicon-16x16.png')
    link(rel='manifest' href='/assets/icons/manifest.json')
    meta(name='msapplication-TileColor' content='#ffffff')
    meta(name='msapplication-TileImage' content='/assets/icons/ms-icon-144x144.png')
    meta(name='theme-color' content='#ffffff')
    //link(rel='stylesheet', href='assets/stylesheets/bootstrap.min.css', crossorigin='anonymous')
    ////link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Inter:wght@200..900')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet", crossorigin="anonymous")
    //link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200')

    script(src='/assets/javascripts/bootstrap.min.js', crossorigin='anonymous')
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    block head
  body
    .toast-container.position-fixed.top-0.end-0.p-3(style="z-index: 1021;")
    if showHeader
      nav.navbar.navbar-expand-md.sticky-top.navbar-shrink.py-3.border-bottom#mainNav
        .container
          a.navbar-brand.d-flex.align-items-center(href="/")
            // span.bs-icon-sm.bs-icon-circle.bs-icon-primary.shadow.d-flex.justify-content-center.align-items-center.me-2
            img.me-2(src='/assets/icons/main.png', width=40, height=40)

            span EasyClaim
          button.navbar-toggler(data-bs-toggle="collapse", data-bs-target="#navcol-1")
            span.visually-hidden Toggle navigation
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navcol-1
            ul.navbar-nav.mx-auto
              li.nav-item
                a.nav-link(href="/") Home
              li.nav-item
                a.nav-link(href="/expenses") Expenses
              li.nav-item
                a.nav-link(href="/claims") Claims
              li.nav-item
            if user
              .dropdown
                button.btn.btn-lg.btn-outline-secondary.dropdown-toggle(type="button", data-bs-toggle="dropdown") #{user.name || 'Your account'}
                ul.dropdown-menu
                  li
                    a.dropdown-item(href="/settings", target="_blank", type="button")
                      i.bi.bi-gear.me-1
                      | Settings
                    a.dropdown-item(href="/accounts/logout", type="button")
                      i.bi.bi-box-arrow-left.me-1
                      | Log out
            else
              div.d-flex.align-items-center
                a.btn.btn-primary.btn-lg.shadow.rounded-pill(role="button", href="/accounts/signup") Sign up
                span.mx-2.fs-4.text-primary(style="font-weight: 500") or
                a.btn.btn-primary.btn-lg.shadow.rounded-pill(role="button", href="/accounts/login") Log in
    block content
    script(src="/assets/javascripts/main.js")
