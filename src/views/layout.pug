include icons

doctype html
html
  head
    title #{head.pageTitle} - #{head.siteName}
    link(rel='stylesheet', href='/assets/stylesheets/global.css')
    link(rel='preconnect', href='https://rsms.me')
    link(rel='stylesheet', href='https://rsms.me/inter/inter.css')
    link(rel='apple-touch-icon' sizes='180x180' href='/assets/icons/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='192x192' href='/assets/icons/android-icon-192x192.png')
    link(rel="icon" type="image/x-icon" href="/assets/icons/favicon.ico")
    link(rel='manifest' href='/assets/icons/manifest.json')
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    meta(name='theme-color' content='#ffffff')
    meta(name="description" content=head.description)
    meta(name="keywords" content=head.keywords)
    meta(name="author" content=head.author)
    meta(property="og:title" content=head.pageTitle)
    meta(property="og:description" content=head.description)
    meta(property="og:image" content=head.image)
    meta(property="og:url" content=head.url)
    meta(property="og:site_name" content=head.siteName)
    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:title" content=head.pageTitle)
    meta(name="twitter:description" content=head.description)
    meta(name="twitter:image" content=head.image)
    link(rel="canonical" href=head.url)
    meta(name="robots" content="index, follow")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    //link(rel='stylesheet', href='assets/stylesheets/bootstrap.min.css', crossorigin='anonymous')
    ////link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Inter:wght@200..900')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet", crossorigin="anonymous")
    //link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200')

    script(src='/assets/javascripts/bootstrap.min.js', crossorigin='anonymous')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")

    block head
  body
    .toast-container.position-fixed.top-0.end-0.p-3(style="z-index: 1021;")
    if showHeader
      nav.navbar.navbar-expand-md.sticky-top.navbar-shrink.py-3.border-bottom#mainNav
        .container
          a.navbar-brand.d-flex.align-items-center(href="/")
            // span.bs-icon-sm.bs-icon-circle.bs-icon-primary.shadow.d-flex.justify-content-center.align-items-center.me-2
            img.me-2(src='/assets/icons/icon-512.png', width=40, height=40)

            span EasyClaim
          button.navbar-toggler(data-bs-toggle="collapse", data-bs-target="#navcol-1")
            span.visually-hidden Toggle navigation
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navcol-1
            ul.navbar-nav.mx-auto
              li.nav-item
                a.nav-link(href="/") Home
              li.nav-item
                a.nav-link(href="/expenses") Expenses
              li.nav-item
                a.nav-link(href="/claims") Claims
              li.nav-item
            if user
              .dropdown
                button.btn.btn-lg.btn-outline-secondary.dropdown-toggle(type="button", data-bs-toggle="dropdown") #{user.name || 'Your account'}
                ul.dropdown-menu
                  li
                    a.dropdown-item(href="/settings", target="_blank", type="button")
                      i.bi.bi-gear.me-1
                      | Settings
                    a.dropdown-item(href="/accounts/logout", type="button")
                      i.bi.bi-box-arrow-left.me-1
                      | Log out
            else
              div.d-flex.align-items-center
                a.btn.btn-primary.btn-lg.shadow.rounded-pill(role="button", href="/accounts/signup") Sign up
                span.mx-2.fs-4.text-primary(style="font-weight: 500") or
                a.btn.btn-primary.btn-lg.shadow.rounded-pill(role="button", href="/accounts/login") Log in
    block content
    script(src="/assets/javascripts/main.js")
